# =====================================================
# GitHired Server Environment Configuration
# =====================================================
# Copy this file to .env and fill in your values
# =====================================================

# ==================== DATABASE ====================
# PostgreSQL Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/githired_production

# ==================== JWT & SECURITY ====================
# JWT Secret Key (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# ==================== SERVER ====================
# Server Port
PORT=3001

# Node Environment (development, production, test)
NODE_ENV=production

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173

# ==================== GOOGLE OAUTH ====================
# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# ==================== GROQ AI ====================
# Groq AI API Configuration (for interview questions)
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=meta-llama/llama-3.1-70b-versatile

# ==================== IMAGEKIT ====================
# ImageKit Configuration (for file upload & processing)
IMAGEKIT_PUBLIC_KEY=your-imagekit-public-key
IMAGEKIT_PRIVATE_KEY=your-imagekit-private-key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-imagekit-id

# ==================== MIDTRANS PAYMENT ====================
# Midtrans Payment Gateway Configuration
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
# Set to false for production (true is for Midtrans sandbox)
MIDTRANS_SANDBOX=true

# ==================== EMAIL (Optional) ====================
# Email Configuration (if using email service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@githired.com

# ==================== LOGGING ====================
# Logging Configuration
LOG_LEVEL=info
# Options: error, warn, info, debug

# ==================== CORS ====================
# CORS Configuration
CORS_ORIGIN=http://localhost:5173,https://githired.com

# ==================== REDIS (Optional) ====================
# Redis Configuration (if using caching)
REDIS_URL=redis://localhost:6379

# ==================== PDF Processing ====================
# PDF Processing Configuration
PDF_UPLOAD_MAX_SIZE=10485760

# ==================== FEATURE FLAGS ====================
# Feature Flags
ENABLE_PAYMENT=true
ENABLE_GOOGLE_AUTH=true
ENABLE_EMAIL_VERIFICATION=true
