# =====================================================
# GitHired Client Environment Configuration
# =====================================================
# Copy this file to .env.local and fill in your values
# =====================================================

# ==================== API ====================
# API Base URL (backend server)
VITE_API_URL=http://localhost:3001
# For production:
# VITE_API_URL=https://api.githired.com

# ==================== FIREBASE ====================
# Firebase Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-firebase-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# ==================== GOOGLE OAUTH ====================
# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# ==================== MIDTRANS ====================
# Midtrans Payment Gateway
VITE_MIDTRANS_CLIENT_KEY=your-midtrans-client-key
# Set to true for sandbox mode (testing)
VITE_MIDTRANS_SANDBOX=true

# ==================== APPLICATION ====================
# Application Environment
VITE_APP_NAME=GitHired
VITE_APP_VERSION=1.0.0
# Options: development, production
VITE_APP_ENV=development

# ==================== FEATURES ====================
# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PAYMENT=true

# ==================== IMAGEKIT ====================
# ImageKit Configuration
VITE_IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-imagekit-id

# ==================== VOICE ====================
# Speech Recognition & Text-to-Speech
VITE_ENABLE_VOICE_INPUT=true
VITE_ENABLE_TEXT_TO_SPEECH=true

# ==================== DEVELOPMENT ====================
# Development Settings (only use in development)
VITE_DEBUG_MODE=false
VITE_MOCK_API=false
